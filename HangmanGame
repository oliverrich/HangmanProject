#include <iostream>
#include <cstdlib> //for rand later
#include <ctime>

using namespace std;

class HangmanGame {
    public:

    //default constructor
    HangmanGame() {

    }


    void play() {
        drawHangman();

    }



    void drawHangman() {
        //level 0
        cout << "_____" << endl;
        cout << "|   |"<< endl;
        cout << "|    "<< endl;
        cout << "|    "<< endl;
        cout << "|    "<< endl;
        cout << "__   "<< endl;
        //level 1
        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|    "<< endl;
        cout << "|    "<< endl;
        cout << "__   "<< endl;

        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|   |"<< endl;
        cout << "|    "<< endl;
        cout << "__   "<< endl;

        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|  /|"<< endl;
        cout << "|    "<< endl;
        cout << "__   "<< endl;

        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|  /|\\"<< endl;
        cout << "|    "<< endl;
        cout << "__   "<< endl;

        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|  /|\\"<< endl;
        cout << "|  / "<< endl;
        cout << "__   "<< endl;

        cout << "_____"<< endl;
        cout << "|   |"<< endl;
        cout << "|   o"<< endl;
        cout << "|  /|\\"<< endl;
        cout << "|  / \\"<< endl;
        cout << "__   "<< endl;
    }


    //start game
    int main() {
        play();
        return 0;
    }
};
