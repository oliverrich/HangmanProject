#include <iostream>
#include <cstdlib> //for rand later
#include <ctime>

using namespace std;



void displayWord(const string &word, const string &guessedLetters) {
    cout<<"\nword:";
    for (int i=0; i<word.length(); ++i) {
        bool guessed = false;
        if (!guessed)
            cout << "_";
    }

}


int main () {
    string word= "hello";
    string guessedLetters= "bruh";
    displayWord(word, guessedLetters);
}












